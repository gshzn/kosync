---
import {
  Card,
  CardContent,
  CardHeader,
  CardTitle,
} from "@/components/ui/card"

const steps = [
  {
    number: "01",
    title: "Install Client",
    description: "Download and install the lightweight KoSync client on your Kobo eReader."
  },
  {
    number: "02",
    title: "Upload Books",
    description: "Log in to the web dashboard and upload your EPUB files."
  },
  {
    number: "03",
    title: "Sync & Read",
    description: "Open your Kobo, hit sync, and your new books will appear instantly."
  }
];
---

<section class="py-20">
  <div class="container mx-auto px-4">
    <div class="mb-16 text-center">
      <h2 class="mb-4 text-3xl font-bold tracking-tight text-foreground sm:text-4xl">
        How it works
      </h2>
      <p class="mx-auto max-w-2xl text-muted-foreground">
        Three simple steps to your wireless library.
      </p>
    </div>
    <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
      {steps.map((step, index) => (
        <div class="relative flex flex-col items-center">
           <Card className="w-full h-full border-none shadow-none bg-transparent">
              <CardHeader className="flex flex-col items-center text-center pb-2">
                 <div class="mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-primary text-2xl font-bold text-primary-foreground shadow-lg">
                  {step.number}
                </div>
                <CardTitle className="text-xl">{step.title}</CardTitle>
              </CardHeader>
              <CardContent className="text-center text-muted-foreground">
                {step.description}
              </CardContent>
           </Card>
           {index < steps.length - 1 && (
            <div class="absolute right-[-50%] top-12 hidden w-full -translate-y-1/2 border-t-2 border-dashed border-muted-foreground/30 md:block" style={{ width: 'calc(100% - 4rem)' }}></div>
          )}
        </div>
      ))}
    </div>
  </div>
</section>

